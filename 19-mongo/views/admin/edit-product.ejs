<%- include('../includes/head.ejs') %>

    <link rel="stylesheet" href="/css/forms.css">
</head>
<body>

    <%- include('../includes/navigation.ejs') %>

    <main>
        <h1><%= pageTitle %></h1>
        <form class="product-form" action="/admin/<% if (edit) { %>edit-product<% } else { %>add-product<% } %>" method="POST">
            <% if (edit) { %>
                <input type="hidden" name="productId" id="productId" value="<%= product._id %>">
            <% } %>
            <div class="form-control">
                <label for="title">Title:</label>
                <input type="text" name="title" id="title" value="<% if (edit) { %><%= product.title %><% } %>">
            </div>
            <div class="form-control">
                <label for="imageUrl">Image url:</label>
                <input type="text" name="imageUrl" id="imageUrl" value="<% if (edit) { %><%= product.imageUrl %><% } %>">
            </div>
            <div class="form-control">
                <label for="price">Price:</label>
                <input type="number" name="price" id="price" step="0.01" value="<% if (edit) { %><%= product.price %><% } %>">
            </div>
            <div class="form-control">
                <label for="description">Description:</label>
                <textarea name="description" id="description" rows="8"><% if (edit) { %><%= product.description %><% } %></textarea>
            </div>
            <button type="submit"><% if (edit) { %>Update Product<% } else { %>Add Product<% } %></button>
        </form>
    </main>

<%- include('../includes/end.ejs') %>